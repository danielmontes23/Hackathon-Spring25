---
import Layout from '../layouts/Layout.astro';
import '../styles/Global.css';
---

<Layout>
  <main style="max-width: 700px; margin: 2rem auto;">
    <h1>Resume Builder</h1>
    <form id="resume-form">
      <section>
        <h2>Personal Info</h2>
        <label>
          First Name:
          <input type="text" name="name" required />
        </label>
		<label>
          Last Name:
          <input type="text" name="name" required />
        </label>
        <label>
          Email:
          <input type="email" name="email" required />
        </label>
        <label>
          Phone:
          <input type="tel" name="phone" />
        </label>
      </section>

      <section>
        <h2>Education</h2>
        <label>
          College/University:
          <input type="text" name="education_school" />
        </label>
        <label>
          Degree:
          <input type="text" name="education_degree" />
        </label>
        <label>
          Start Year:
          <input type="text" name="education_start_year" />
        </label>
        <label>
          Graduation Year:
          <input type="text" name="education_grad_year" />
        </label>
      </section>

      <section>
        <h2>Experience</h2>
        <label>
          Company:
          <input type="text" name="experience_company" />
        </label>
        <label>
          Role:
          <input type="text" name="experience_role" />
        </label>
        <label>
          Start Date:
          <input type="text" name="experience_years" />
        </label>
		<label>
          End Date:
          <input type="text" name="experience_years" />
        </label>
      </section>

      <section>
        <h2>Skills</h2>
        <label>
          List your skills (comma separated):
          <input type="text" name="skills" />
        </label>
      </section>

      <section>
        <h2>Custom Section</h2>
        <label>
          Section Label:
          <input type="text" name="custom_label" />
        </label>
        <label>
          Section Content:
          <textarea name="custom_content"></textarea>
        </label>
      </section>

      <button type="submit">Generate Resume</button>
    </form>
  </main>
</Layout>
