---
import Layout from '../layouts/Layout.astro';
import '../styles/Global.css';
import DynamicResumeSections from '../components/DynamicResumeSections.jsx';
---

<Layout>
  <main style="max-width: 700px; margin: 2rem auto;">
    <h1>Resume Builder</h1>
    <form id="resume-form">
      <section>
        <h2>Personal Info</h2>
        <label>
          First Name:
          <input type="text" name="first_name" required />
        </label>
        <label>
          Last Name:
          <input type="text" name="last_name" required />
        </label>
        <label>
          Email:
          <input type="email" name="email" required />
        </label>
        <label>
          Phone:
          <input type="tel" name="phone" />
        </label>
      </section>

      <!-- Only this part is React! -->
      <DynamicResumeSections client:load />

      <section>
        <h2>Custom Section</h2>
        <label>
          Section Label:
          <input type="text" name="custom_label" />
        </label>
        <label>
          Section Content:
          <textarea name="custom_content"></textarea>
        </label>
      </section>

      <button type="submit">Generate Resume</button>
    </form>
  </main>
</Layout>
